name = "r4e-kvm"
description = "Sample KVM blueprint"

version = "0.0.1"
modules = [ ]
groups = [ ]


################## base packages

[[packages]]
name = "insights-client"
version = "*"

[[packages]]
name = "rhc"
version = "*"

[[packages]]
name = "subscription-manager"
version = "*"

[[packages]]
name = "redhat-release"
version = "*"



################## KVM dependencies

[[packages]]
name = "virt-install"
version = "*"

[[packages]]
name = "libvirt-daemon-config-network"
version = "*"

[[packages]]
name = "libvirt-daemon-kvm"
version = "*"

[[packages]]
name = "qemu-kvm"
version = "*"

[[packages]]
name = "libguestfs-tools"
version = "*"

[[packages]]
name = "python3-libguestfs"
version = "*"

[[packages]]
name = "virt-top"
version = "*"




################## cockpit

[[packages]]
name = "cockpit"
version = "*"

[[packages]]
name = "cockpit-machines"
version = "*"


[[packages]]
name = "cockpit-podman"
version = "*"


[[packages]]
name = "cockpit-system"
version = "*"


[[packages]]
name = "cockpit-bridge"
version = "*"









[customizations]
hostname = "virt-edge"



[customizations.services]
enabled = ["cockpit","insights-client"]



[customizations.firewall]
ports = ["9090:tcp"]



[[customizations.sshkey]]
user = "root"
key = "<ssh public key>"


[[customizations.user]]
name = "admin"
description = "Admin user"
password = '<password hash obatained with:        python3 -c 'import crypt,getpass;pw=getpass.getpass();print(crypt.crypt(pw) if (pw==getpass.getpass("Confirm: ")) else exit())'       >'
key = "<ssh public key>"
home = "/home/admin/"
shell = "/usr/bin/bash"
groups = ["users", "wheel"]
